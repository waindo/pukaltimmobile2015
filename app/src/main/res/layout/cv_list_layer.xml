<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/cvLayer"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:id="@+id/linLayer"
        android:background="@drawable/sel_layer_item"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tvTeksTampil"
            android:background="@color/putih"
            android:layout_width="0dp"
            android:layout_height="32dp"
            android:layout_gravity="center_vertical"
            android:layout_weight="2"
            android:gravity="center_vertical"
            android:text="@string/nama_layer"
            android:textAppearance="?android:attr/textAppearanceSmall" />

        <TextView
            android:id="@+id/tvIdLayer"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_weight="0"
            android:visibility="invisible" />

        <TextView
            android:id="@+id/tvUrutan"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_weight="0"
            android:visibility="invisible" />

        <ToggleButton
            android:id="@+id/tbIsGrupLayer"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_weight="0"
            android:text=""
            android:textOff=""
            android:textOn=""
            android:visibility="invisible" />

        <TextView
            android:id="@+id/tvNamaGrup"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_weight="0"
            android:visibility="invisible" />

        <ToggleButton
            android:id="@+id/tbOnOffLayer"
            android:layout_width="0dp"
            android:layout_height="32dp"
            android:layout_gravity="center_vertical"
            android:layout_marginBottom="3dp"
            android:layout_marginTop="3dp"
            android:layout_weight="0.75"
            android:background="@drawable/sel_toggle_1"
            android:text=""
            android:textOff=""
            android:textOn="" />

    </LinearLayout>

</android.support.v7.widget.CardView>